https://leetcode.com/problems/sort-colors/

class Solution {
    public void sortColors(int[] nums) {
        int[] n = new int[3];
        for (int num : nums) {
            n[num]++;
        }
        for (int i = 0; i < nums.length; i++) {
            if (n[0] != 0) {
                nums[i] = 0;
                n[0]--;
            } else if (n[1] != 0) {
                nums[i] = 1;
                n[1]--;
            } else {
                nums[i] = 2;
                n[2]--;
            }
        }
    }
}
