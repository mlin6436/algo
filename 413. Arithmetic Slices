https://leetcode.com/problems/arithmetic-slices/

class Solution {
    public int numberOfArithmeticSlices(int[] nums) {
        int[] steps = new int[nums.length];
        for (int i = 1; i < nums.length; i++) {
            steps[i] = nums[i] - nums[i - 1];
        }
        int count = 0;
        for (int i = 1; i < nums.length; i++) {
            for (int j = i + 1; j < nums.length; j++) {
                if (steps[j] == steps[i]) {
                    count++;
                } else {
                    break;
                }
            }
        }
        return count;
    }
}
