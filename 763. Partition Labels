https://leetcode.com/problems/partition-labels/

class Solution {
    public List<Integer> partitionLabels(String s) {
        var res = new ArrayList();
        var map = new int[26];
        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            map[c - 'a'] = i;
        }
        int start = 0;
        int end = 0;
        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            end = Math.max(end, map[c - 'a']);
            if (i == end) {
                res.add(end - start + 1);
                start = i + 1;
                end = i + 1;
            }
        }
        return res;
    }
}
